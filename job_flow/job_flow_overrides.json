{
  "Applications": [
    {
      "Name": "Hadoop"
    },
    {
      "Name": "Spark"
    }
  ],
  "BootstrapActions": [
    {
      "Name": "bootstrap_emr",
      "ScriptBootstrapAction": {
        "Path": "s3://{{ var.value.Bootstrap_Bucket }}/bootstrap.sh"
      }
    }
  ],
  "Configurations": [
    {
      "Classification": "spark-env",
      "Configurations": [
        {
          "Classification": "export",
          "Properties": {
            "PYSPARK_PYTHON": "/usr/bin/python3"
          }
        }
      ]
    }
  ],
  "Instances": {
    "Ec2KeyName": "{{ var.value.Ec2_Key_Name }}",
    "Ec2SubnetId": "{{ var.value.Ec2_Subnet_Id }}",
    "InstanceGroups": [
      {
        "InstanceCount": 1,
        "InstanceRole": "MASTER",
        "InstanceType": "m5.xlarge",
        "Market": "ON_DEMAND",
        "Name": "Primary_Node"
      },
      {
        "InstanceCount": 2,
        "InstanceRole": "CORE",
        "InstanceType": "m5.xlarge",
        "Market": "ON_DEMAND",
        "Name": "Core_Node_2"
      }
    ],
    "KeepJobFlowAliveWhenNoSteps": false,
    "TerminationProtected": false
  },
  "JobFlowRole": "{{ var.value.Job_Flow_Role }}",
  "LogUri": "s3://{{ var.value.Log_Bucket }}/emrlogs/",
  "Name": "Udacity_Capstone_Spark_On_EMR",
  "ReleaseLabel": "emr-5.29.0",
  "ServiceRole": "{{ var.value.Service_Role }}",
  "VisibleToAllUsers": true
}